{% layout "index.liquid" %}

{% block main %}
  <div class="container">
    <div class="wrapper">
      <div class="label">
        <h1>Level 1</h1>
      </div>

      <div class="pg">
        <p>1/7</p>
      </div>
    </div>


    <div class="questions">

      <div class="tile">
        <img src="data:image/webp;base64,{{ question.image  }}">
        <p>Question details here</p>
      </div>

      <form method="post" class="answer">
        <input
          type="text"
          name=""
          value=""
          placeholder="answer here"><br>
        <input type="submit" value="Submit">
      </form>

    </div>
  </div>
{% endblock %}

{% block styles %}
  <style>
    .label {
      color: white;
      padding-left: 80px;
      padding-top: 30px;
      font-size: 20px;
      font-weight: 900;
    }

    .pg {
      color: white;
      border: 1px solid white;
      border-right: none;
      font-size: 20px;
      border-radius: 50px 0 0 50px;
      text-align: center;
      font-style: italic;
      font-weight: 600;
      width: 200px;
    }

    .tile {
      background-color: rgba(255, 255, 255, 0.09);
      backdrop-filter: blur(10px);
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      gap: 1rem;
      padding: 3rem;
      border-radius: 20px;
    }

    .answer {
      margin-bottom: 20px;
      font-size: 70px;
      text-align: center;
    }

    input[type="text"] {
      text-align: center;
      font-size: 20px;
      padding: 2%;
      width: 50%;
    }

    input[type="submit"] {
      background: linear-gradient(90.05deg, #F3762F 0%, #EC364D 72.24%);
      color: white;
      border-radius: 30px;
      font-size: 20px;
      padding: 0.5rem;
    }

    input[type="text"]::placeholder {
      font-size: smaller;
      font-weight: 500;
    }

    .container {
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
    }

    .wrapper {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
    }

    @media(max-width: 768px) {
      .label {
        padding-left: 25px;
        padding-top: 0;
        font-size: 10px;
      }

      .pg {
        border: 0;
        font-size: 15px;
      }

      input[type="text"] {
        height: 20px;
        font-size: 15px;
      }

      .container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        width: 100%;
      }

      .wrapper {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        font-size: 10px;
      }

      .container {
        width: 100%;
      }

      .tile {
        font-size: 30px;
        width: 100%;
      }

      .questions {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        width: 80%;
      }

      input[type="text"]::placeholder {
        font-size: 15px;
      }

      .answer {
        width: 100%;
        text-align: center;
      }

      input[type="button"] {
        width: 35%;
        padding: 2%;
      }
    }
  </style>

{% endblock %}