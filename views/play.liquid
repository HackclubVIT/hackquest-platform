{% layout "index.liquid" %}

{% block main %}

<div id="container">
  {% unless completed or waiting%}
  <h1>Level {{ question.level }}</h1>
  {% endunless %}
  <div id="question">
    {% if completed %}
    <img src="/images/won.webp">
    {% elsif waiting %}
    <img src="/images/waiting.webp">
    {% else %}
    <img src="{{ question.image }}">
    {% endif %}
    {% if question.question %}
    <p class=" text">{{ question.question }}</p>
    {% elsif completed %}
    <p>Well done! You have completed all the levels!</p>
    {% elsif waiting %}
    <p>The game has not begun yet</p>
    {% endif %}
  </div>
  {% unless completed or waiting %}
  <form class=" dummy" method="post">
    <input type="text" name="answer" placeholder="answer here">
    {% if error %}
    <p class="error">{{ error }}</p>
    {% endif %}
    <input type="submit" value="Submit">
  </form>
  {% endunless %}
</div>

{% endblock %}

{% block styles %}

<style>
  #container {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 2rem;
    padding: 2rem;
    padding-bottom: 0;
  }

  h1 {
    padding: 0;
    margin: 0;
  }

  #question {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding: 1rem;
    border-radius: 20px;
    background-color: rgba(255, 255, 255, 0.09);
    backdrop-filter: blur(10px);

    max-width: min(100%, 300px);
  }

  #question img {
    max-width: 100%;
    height: auto;
  }

  form {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 1rem;

    font-size: 1.5rem;
  }

  input[type=text] {
    font-size: 1rem;
    padding: .25rem;
  }

  input::placeholder {
    font-size: smaller;
  }

  input[type=submit] {
    background: linear-gradient(90.05deg, #F3762F 0%, #EC364D 72.24%);
    border-radius: 20px;
    color: white;
    padding: .5rem;
  }

  .error {
    color: red;
    font-size: smaller;
  }

  .text {
    color: transparent;
    padding: 0;
    margin: 0;
  }
</style>

{% endblock %}